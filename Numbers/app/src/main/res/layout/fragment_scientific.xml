<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mysway.numbers.MainActivity$ScientificFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#f7f7f7"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="30dp"
            android:hint="0"
            android:gravity="right"/>
        <TextView
            android:id="@+id/text_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="0"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_sin"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="sin"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_cos"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="cos"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_tan"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="tan"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_log"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="log"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_ln"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="ln"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_e"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="e"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_pi"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="ℼ"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_factorial"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="!"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_sqrt"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="√"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_cbrt"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="∛"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_square"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="x²"
                android:textAllCaps="false"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_power"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="^"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_lPar"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="("
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_rPar"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text=")"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <ImageButton
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <ImageButton
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
