<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mysway.numbers.MainActivity$BasicFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="#f7f7f7"
        android:elevation="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_previous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:textSize="30dp"
            android:hint="0"
            android:gravity="right"/>
        <TextView
            android:id="@+id/text_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:hint="0"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/colorAccent"
        android:elevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_seven"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="7"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_eight"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="8"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_nine"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="9"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_slash"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="/"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_four"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="4"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_five"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="5"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_six"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="6"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_times"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="*"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_clear"
                android:layout_width="40dp"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="8dp"
                android:text="C"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_one"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="1"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_two"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="2"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_three"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="3"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_minus"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="-"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/key_dot"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="."
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_zero"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="0"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_equals"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="="
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
            <Button
                android:id="@+id/key_plus"
                android:layout_width="@dimen/calcButton_size"
                android:layout_height="@dimen/calcButton_size"
                android:background="#e8e8e8"
                android:padding="@dimen/activity_vertical_margin"
                android:text="+"
                android:textSize="30dp"
                android:textAlignment="center"
                android:fontFamily=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
